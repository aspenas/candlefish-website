{
    "info": {
        "_postman_id": "candlefish-claude-config-v2.0",
        "name": "Claude Configuration System API v2.0",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Configuration Profiles",
            "item": [
                {
                    "name": "List Profiles",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/config/profiles",
                            "host": ["{{base_url}}"],
                            "path": ["config", "profiles"]
                        }
                    }
                },
                {
                    "name": "Create Profile",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Enterprise DevOps\",\n    \"version\": \"2.0.0\",\n    \"settings\": {\n        \"languages\": [\"python\", \"typescript\"],\n        \"tools\": [\"poetry\", \"pnpm\"]\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/config/profiles",
                            "host": ["{{base_url}}"],
                            "path": ["config", "profiles"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "https://api.candlefish.ai/v2.0"
        },
        {
            "key": "access_token",
            "value": ""
        }
    ]
}