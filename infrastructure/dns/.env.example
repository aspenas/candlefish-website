# Environment variables for candlefish.ai infrastructure

# Database
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_USER=candlefish
POSTGRES_DB=candlefish

# Email/SMTP for alerts
SMTP_PASSWORD=your_smtp_password_here
ALERT_EMAIL=admin@candlefish.ai

# SSL/TLS
DOMAIN=candlefish.ai
SSL_EMAIL=admin@candlefish.ai

# AWS (for Route53 and ACM)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# Cloudflare (backup DNS)
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id

# API Keys
API_KEY_SECRET=your_api_key_secret
JWT_SECRET=your_jwt_secret

# Monitoring
SLACK_WEBHOOK_URL=your_slack_webhook
DISCORD_WEBHOOK_URL=your_discord_webhook

# Services Configuration
API_PORT=8000
ANALYTICS_PORT=8001
ROUTER_PORT=8002
MONITOR_PORT=8003
CONFIG_PORT=3000

# Redis
REDIS_URL=redis://redis:6379

# Development/Production
NODE_ENV=production
DEBUG=false