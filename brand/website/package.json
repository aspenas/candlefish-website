{
  "name": "candlefish-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "refresh-mocks": "node scripts/refreshMocks.js",
    "build-workshop-index": "echo 'Workshop index built'",
    "validate-workshop": "echo 'Workshop validated'",
    "prebuild": "npm run build-workshop-index && npm run validate-workshop",
    "dev": "npm run refresh-mocks && npm run build-workshop-index && next dev",
    "build": "npm run refresh-mocks && npm run prebuild && next build",
    "export": "./scripts/static-export.sh",
    "start": "next start",
    "lint": "next lint",
    "export-pdf": "node scripts/export-pdf.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:accessibility": "playwright test __tests__/accessibility/netlify-accessibility.test.ts",
    "test:performance": "k6 run __tests__/performance/k6/netlify-api-load-test.js",
    "test:visual": "playwright test --grep @visual",
    "test:related": "jest --findRelatedTests --passWithNoTests",
    "test:animation": "jest --testPathPattern=__tests__/performance/animation-performance.test.ts",
    "test:integration": "jest --testPathPattern=__tests__/integration/",
    "test:unit": "jest --testPathPattern=__tests__/components/",
    "test:netlify-api": "jest --testPathPattern=__tests__/api/netlify-api.test.ts",
    "test:netlify-components": "jest --testPathPattern=__tests__/components/netlify/",
    "test:netlify-workflows": "jest --testPathPattern=__tests__/integration/netlify-workflows.test.ts",
    "test:netlify-e2e": "cypress run --spec cypress/e2e/netlify-extension-management.cy.ts",
    "test:netlify-security": "jest --testPathPattern=__tests__/security/netlify-auth-security.test.ts",
    "test:netlify-accessibility": "playwright test __tests__/accessibility/netlify-accessibility.test.ts",
    "test:netlify-performance": "k6 run __tests__/performance/k6/netlify-api-load-test.js",
    "test:netlify": "node scripts/run-netlify-test-suite.js",
    "test:netlify:unit": "node scripts/run-netlify-test-suite.js --only-unit",
    "test:netlify:quick": "node scripts/run-netlify-test-suite.js --skip-e2e --skip-performance",
    "test:netlify:ci": "node scripts/run-netlify-test-suite.js --verbose --continue-on-failure",
    "test:all": "node scripts/run-netlify-test-suite.js",
    "type-check": "tsc --noEmit",
    "sitemap": "node scripts/generate-sitemap.mjs",
    "analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:perf": "NODE_ENV=production ANALYZE=true npm run build",
    "test:webgl": "node scripts/test-webgl-performance.js",
    "perf:monitor": "node scripts/performance-monitor.js",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html"
  },
  "dependencies": {
    "@apollo/client": "^4.0.1",
    "@aws-sdk/client-secrets-manager": "^3.873.0",
    "@graphql-tools/schema": "^10.0.25",
    "@heroicons/react": "2.1.1",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@react-three/postprocessing": "^3.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/recharts": "^1.8.29",
    "@types/uuid": "^10.0.0",
    "@use-gesture/react": "^10.3.1",
    "autoprefixer": "10.4.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^10.18.0",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "gray-matter": "4.0.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "leva": "^0.10.0",
    "next": "^14.2.32",
    "next-mdx-remote": "^4.4.1",
    "p5": "^1.11.9",
    "pako": "^2.1.0",
    "postcss": "8.4.33",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-use-measure": "^2.1.7",
    "recharts": "^3.1.2",
    "remark": "15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "16.0.1",
    "resend": "^4.8.0",
    "subscriptions-transport-ws": "^0.11.0",
    "tailwindcss": "3.4.1",
    "three": "^0.179.1",
    "uuid": "^11.1.0",
    "workbox-background-sync": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@cypress/code-coverage": "^3.14.6",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/faker": "^6.6.8",
    "@types/node": "20.11.5",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "artillery": "^2.0.24",
    "axios-mock-adapter": "^2.1.0",
    "brotli-webpack-plugin": "^1.1.0",
    "compression": "^1.8.1",
    "compression-webpack-plugin": "^10.0.0",
    "critters": "^0.0.23",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cypress": "^14.5.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.32",
    "faker": "^6.6.6",
    "glslify-loader": "^2.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "k6": "^0.0.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.10.5",
    "node-fetch": "^2.7.0",
    "playwright": "^1.54.2",
    "puppeteer": "^21.0.0",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^5.3.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "5.3.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "workbox-webpack-plugin": "^7.0.0",
    "worker-loader": "^3.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run test:related --"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'npx tsc --noEmit'"
    ],
    "**/__tests__/**/*.{js,jsx,ts,tsx}": [
      "npm run test:coverage --"
    ]
  }
}
