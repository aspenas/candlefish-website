{
  "name": "@candlefish/security-mobile",
  "version": "1.0.0",
  "description": "Mobile Security Monitoring App - Real-time threat detection and incident response",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "@react-native-clipboard/clipboard": "^1.13.2",
    "@react-native-community/netinfo": "^10.0.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^1.9.7",
    "expo": "~49.0.21",
    "expo-application": "~5.4.0",
    "expo-auth-session": "~5.0.2",
    "expo-background-fetch": "~11.3.0",
    "expo-barcode-scanner": "~12.5.0",
    "expo-camera": "~13.4.4",
    "expo-constants": "~14.4.2",
    "expo-crypto": "~12.4.1",
    "expo-device": "~5.4.0",
    "expo-file-system": "~15.4.5",
    "expo-local-authentication": "~13.4.1",
    "expo-location": "~16.1.0",
    "expo-network": "~4.3.0",
    "expo-notifications": "~0.20.1",
    "expo-secure-store": "~12.3.1",
    "expo-sensors": "~12.3.0",
    "expo-splash-screen": "~0.20.5",
    "expo-sqlite": "~11.3.3",
    "expo-status-bar": "~1.6.0",
    "expo-task-manager": "~11.3.0",
    "expo-updates": "~0.18.19",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.2",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-animatable": "^1.3.3",
    "react-native-charts-wrapper": "^0.6.0",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-keychain": "^8.1.3",
    "react-native-modal": "^13.0.1",
    "react-native-paper": "^5.11.1",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0",
    "react-native-svg-charts": "^5.4.0",
    "react-native-vector-icons": "^10.0.3",
    "react-redux": "^8.1.3",
    "subscriptions-transport-ws": "^0.11.0",
    "victory-native": "^36.6.11",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@expo/webpack-config": "^19.0.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.1",
    "@types/jest": "^29.5.8",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "detox": "^20.13.5",
    "eslint": "^8.53.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-expo": "~49.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**/*",
      "!src/**/test/**/*"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "android.emu.debug": {
        "device": "emulator",
        "app": "android.debug"
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 14 Pro"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_4_API_30"
        }
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/SecurityMobile.app"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk"
      }
    }
  },
  "expo": {
    "name": "Security Mobile",
    "slug": "security-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.candlefish.securitymobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication.",
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for quick incident reporting.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to provide location-based security context.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to provide location-based security context."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.candlefish.securitymobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-local-authentication",
      "expo-secure-store",
      "expo-location",
      "expo-notifications",
      "expo-background-fetch",
      "expo-task-manager",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow access to camera for QR code scanning."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "security-mobile-candlefish"
      }
    }
  },
  "private": true
}