# Candlefish AI - Local Secrets Configuration Example
# Copy this to .env.secrets and fill with actual values
# NEVER commit .env.secrets to version control

# AWS Credentials (for accessing Secrets Manager)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY_HERE
AWS_REGION=us-east-1

# Application Secrets (fallback when AWS Secrets Manager unavailable)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
SMITHERY_API_KEY=YOUR_SMITHERY_API_KEY_HERE
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Authentication & Security
JWT_SECRET=GENERATE_RANDOM_32_CHAR_STRING_HERE
ENCRYPTION_KEY=GENERATE_RANDOM_32_CHAR_STRING_HERE

# Database Configuration
POSTGRES_DB=candlefish_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# Redis Configuration  
REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# Note: For production, use AWS Secrets Manager instead of environment variables